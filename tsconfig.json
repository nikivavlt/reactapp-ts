{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"experimentalDecorators": true,
		"types": ["@ragempcommunity/types-cef"],
		"paths": {
			"@/*": ["./src/*"],
			"@shared/*": ["./src/shared_copied/*"]
		}
	},
	"include": ["src", "./src/shared_copied/**/*.d.ts", "./src/shared_copied/configs/**/*.json", "./src/types/**/*.d.ts"]
}
